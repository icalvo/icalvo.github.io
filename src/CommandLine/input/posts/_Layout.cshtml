@inherits MyTemplatePage<SWGen.Document<Post>>

@{
    Layout = "/_MainLayout.cshtml";
}

<article class="post h-entry" itemscope itemtype="http://schema.org/BlogPosting">

    <header class="post-header">
        <h1 class="post-title p-name" itemprop="name headline">@Model.Title</h1>
        <p class="post-meta">
            <time class="dt-published" datetime="@Model.Metadata.Published.ToString("O")" itemprop="datePublished">@Model.Metadata.Published.ToString("yyyy-MM-dd")</time>
        </p>
    </header>

    <div class="post-content e-content" itemprop="articleBody">
            @RenderBody()
    </div>
</article>
