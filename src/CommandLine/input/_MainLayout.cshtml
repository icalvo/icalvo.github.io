@using SWGen
@inherits TemplatePage<IDocument>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  @if (Model.Title == null)
  {
    <title>@Model.SiteInfo.Title</title>
  }
  else
  {
    <title>@Model.Title | @Model.SiteInfo.Title</title>
  }
  <meta name="generator" content="SWG" />
  <meta property="og:title" content="@Model.SiteInfo.Title" />
  <meta name="author" content="@Model.SiteInfo.Owner" />
  <meta property="og:locale" content="en_US" />
  <meta name="description" content="@Model.SiteInfo.Description" />
  <meta property="og:description" content="@Model.SiteInfo.Description" />
  <link rel="canonical" href="@Model.Link" />
  <meta property="og:url" content="@Model.Link" />
  <meta property="og:site_name" content="@Model.SiteInfo.Title" />
  <meta property="og:type" content="@(Model.Metadata is Document<Post> ? "article": "website")" />
  @if (Model.Metadata is Document<IndexPage> d)
  {
    if (d.Metadata.PrevPage != null)
    {
      <link rel="prev" href="@d.Metadata.PrevPage.Link" />
    }
    if (d.Metadata.NextPage != null)
    {
      <link rel="next" href="@d.Metadata.NextPage.Link" />
    }
  }
  <meta name="twitter:card" content="summary" />
  <meta property="twitter:title" content="@Model.SiteInfo.Title" />
  <meta name="twitter:site" content="@("@")@Model.SiteInfo.SocialLinks["twitter"]" />
  <meta name="twitter:creator" content="@Model.Author" />
  <meta name="google-site-verification" content="lYI_fzae0p3Hx_Ta5lkgLAztpNDFaWHb39crE9KBYjA" />
  <script type="application/ld+json">
    {
      "@@context":"https://schema.org",
      "@@type":"@(Model.Metadata is Document<Post> ? "BlogPosting": "WebSite")",
      "author":{"@@type":"Person","name":"@Model.Author"},
      "description":"@Model.SiteInfo.Description",
      "headline":"@Model.SiteInfo.Title",
      "name":"@Model.SiteInfo.Title",
      "url":"@Model.SiteInfo.Url"
    }
  </script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/assets/css/style.css">
  <link type="application/atom+xml" rel="alternate" href="https://ignaciocalvo.com/feed.xml" title="@Model.SiteInfo.Title" />
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-1520724-2"></script>
  <script>
      window['ga-disable-UA-1520724-2'] = window.doNotTrack === "1" || navigator.doNotTrack === "1" || navigator.doNotTrack === "yes" || navigator.msDoNotTrack === "1";
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-1520724-2');
    </script>
    <script src="/assets/js/green-audio-player.js"></script>
</head>
<body>

<header class="site-header">

  <div class="wrapper"><a class="site-title" rel="author" href="/">@Model.SiteInfo.Title</a><nav class="site-nav">
        <input type="checkbox" id="nav-trigger" class="nav-trigger" />
        <label for="nav-trigger">
          <span class="menu-icon">
            <svg viewBox="0 0 18 15" width="18px" height="15px">
              <path d="M18,1.484c0,0.82-0.665,1.484-1.484,1.484H1.484C0.665,2.969,0,2.304,0,1.484l0,0C0,0.665,0.665,0,1.484,0 h15.032C17.335,0,18,0.665,18,1.484L18,1.484z M18,7.516C18,8.335,17.335,9,16.516,9H1.484C0.665,9,0,8.335,0,7.516l0,0 c0-0.82,0.665-1.484,1.484-1.484h15.032C17.335,6.031,18,6.696,18,7.516L18,7.516z M18,13.516C18,14.335,17.335,15,16.516,15H1.484 C0.665,15,0,14.335,0,13.516l0,0c0-0.82,0.665-1.483,1.484-1.483h15.032C17.335,12.031,18,12.695,18,13.516L18,13.516z"/>
            </svg>
          </span>
        </label>

        <div class="trigger">
          <a class="page-link" href="/homestudio/">My home recording studio</a>
          <a class="page-link" href="https://github.com/MidiRecorder/MidiRecorder">MIDI Recorder</a>
          <a class="page-link" href="/music/">Music works</a>
        </div>
      </nav></div>
</header>
<main class="page-content" aria-label="Content">
  <div class="wrapper">
  @RenderBody()
  </div>
</main>
<footer class="site-footer h-card">
  <data class="u-url" href="/" value="/"></data>

  <div class="wrapper">

    <div class="footer-col-wrapper">
      <div class="footer-col">
        <p class="feed-subscribe">
          <a href="feed.xml">
            <svg class="svg-icon orange">
              <use xlink:href="/assets/minima-social-icons.svg#rss"></use>
            </svg><span>Subscribe</span>
          </a>
        </p>
        <ul class="contact-list">
          <li class="p-name">@Model.SiteInfo.Owner.Name</li>
          <li><a class="u-email" href="mailto:@Model.SiteInfo.Owner.Email">@Model.SiteInfo.Owner.Email</a></li>
        </ul>
      </div>
      <div class="footer-col">
        <p>@Model.SiteInfo.Description</p>
      </div>
    </div>

    <div class="social-links">
      <ul class="social-media-list">
        <li><a rel="me" href="https://www.facebook.com/ignacio.calvomartinez" title="ignacio.calvomartinez"><svg class="svg-icon grey"><use xlink:href="/assets/minima-social-icons.svg#facebook"></use></svg></a></li>
        <li><a rel="me" href="https://github.com/icalvo" title="icalvo"><svg class="svg-icon grey"><use xlink:href="/assets/minima-social-icons.svg#github"></use></svg></a></li>
        <li><a rel="me" href="https://www.instagram.com/ignaciocalvo2" title="ignaciocalvo2"><svg class="svg-icon grey"><use xlink:href="/assets/minima-social-icons.svg#instagram"></use></svg></a></li>
        <li><a rel="me" href="https://www.linkedin.com/in/ignaciocalvomartinez" title="ignaciocalvomartinez"><svg class="svg-icon grey"><use xlink:href="/assets/minima-social-icons.svg#linkedin"></use></svg></a></li>
        <li><a rel="me" href="https://twitter.com/ignaciocalvo" title="ignaciocalvo"><svg class="svg-icon grey"><use xlink:href="/assets/minima-social-icons.svg#twitter"></use></svg></a></li>
        <li><a rel="me" href="https://www.youtube.com/icalvo" title="icalvo"><svg class="svg-icon grey"><use xlink:href="/assets/minima-social-icons.svg#youtube"></use></svg></a></li>
      </ul>
    </div>

  </div>

</footer>

</body>
</html>